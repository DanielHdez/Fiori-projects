<mvc:View controllerName="dhl.invoices.controllers.Hola" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true">
    <Panel id="_IDGenPanel1" headerText="{i18n>HelloPanel}" class="sapUiResponsiveMargin">
        <content>
            <Button id="_Button1" 
                    text="{i18n>DiHola}" 
                    press=".onShowHola" 
                    class="sapUiSmallMarginEnd" />
            <Input id="myinput" 
                   value="{/recipient/name}" 
                   valueLiveUpdate="true" 
                   width="60%" />
            <Text id="_IDGenText1" 
                  text="Hola {/recipient/name}" 
                  class="sapUiSmallMargin boldElements sapThemeHighlightasColor" />
        </content>
        <core:Fragment id="framento" fragmentName="dhl.invoices.view.Form1" type="XML"></core:Fragment>
    </Panel>
</mvc:View>
