<mvc:View controllerName="dhl.invoices.controllers.app" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <Shell id="_IDGenShell1">
        <App id="_IDGenApp1">
            <pages>
                <Page id="_IDGenPage1" title="{i18n>appTitle}">
                    <content>
                        <Panel id="_IDGenPanel1" headerText="{i18n>HelloPanel}" class="sapUiResponsiveMargin" >
                            <content>
                                <Button id="_Button1" text="{i18n>DiHola}" press=".onShowHola" class="sapUiSmallMarginEnd" />
                                <Input id="myinput" value="{/recipient/name}"  valueLiveUpdate="true" width="60%" />
                                <Text id="_IDGenText1" text="Hola {/recipient/name}" class="sapUiSmallMargin boldElements sapThemeHighlightasColor" />
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
